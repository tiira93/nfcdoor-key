<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/Base.Theme.AppCompat.Light.DarkActionBar</item>
    	
	<!-- Main theme colors -->
    	<!--   your app branding color for the app bar -->
    	<item name="android:colorPrimary">#8BC34A</item>
    	<!--   darker variant for the status bar and contextual app bars -->
    	<item name="android:colorPrimaryDark">#689F38</item>
    	<!--   theme UI controls like checkboxes and text fields -->
    	<item name="android:colorAccent">#B2FF59</item>
    </style>

    <style name="test" parent="Theme.MyTheme">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#8BC34A</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#689F38</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#B2FF59</item>
    </style>

</resources>

